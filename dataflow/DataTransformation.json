{
	"name": "DataTransformation",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "BronzeDimAirline",
						"type": "DatasetReference"
					},
					"name": "BronzeDimAirline"
				},
				{
					"dataset": {
						"referenceName": "BronzeDimFlight",
						"type": "DatasetReference"
					},
					"name": "BronzeDimFlight"
				},
				{
					"dataset": {
						"referenceName": "BronzeDimPassenger",
						"type": "DatasetReference"
					},
					"name": "BronzeDimPassenger"
				},
				{
					"dataset": {
						"referenceName": "BronzeFactBooking",
						"type": "DatasetReference"
					},
					"name": "BronzeFactBooking"
				},
				{
					"dataset": {
						"referenceName": "BronzeDimAirport",
						"type": "DatasetReference"
					},
					"name": "BronzeDimAirport"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "linked_service_ADLS",
						"type": "LinkedServiceReference"
					},
					"name": "SilverDimAirline"
				},
				{
					"linkedService": {
						"referenceName": "linked_service_ADLS",
						"type": "LinkedServiceReference"
					},
					"name": "SilverDimFlight"
				},
				{
					"linkedService": {
						"referenceName": "linked_service_ADLS",
						"type": "LinkedServiceReference"
					},
					"name": "SilverDimPassenger"
				},
				{
					"linkedService": {
						"referenceName": "linked_service_ADLS",
						"type": "LinkedServiceReference"
					},
					"name": "SilverFactBooking"
				},
				{
					"linkedService": {
						"referenceName": "linked_service_ADLS",
						"type": "LinkedServiceReference"
					},
					"name": "SilverDimAirport"
				}
			],
			"transformations": [
				{
					"name": "derivedColumnCountry"
				},
				{
					"name": "selectCols"
				},
				{
					"name": "selectColstoRename"
				},
				{
					"name": "derivedGenderFlag"
				},
				{
					"name": "derivedGenderFlagFemale"
				},
				{
					"name": "filterAge"
				},
				{
					"name": "derivedName"
				},
				{
					"name": "castTicketCost"
				},
				{
					"name": "derivedAirportName"
				},
				{
					"name": "UpsertAirline"
				},
				{
					"name": "UpsertFlight"
				},
				{
					"name": "UpsertPassenger"
				},
				{
					"name": "UpsertBooking"
				},
				{
					"name": "UpsertAirport"
				}
			],
			"scriptLines": [
				"source(output(",
				"          airline_id as string,",
				"          airline_name as string,",
				"          country as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> BronzeDimAirline",
				"source(output(",
				"          flight_id as string,",
				"          flight_number as string,",
				"          departure_time as string,",
				"          arrival_time as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> BronzeDimFlight",
				"source(output(",
				"          passenger_id as string,",
				"          full_name as string,",
				"          gender as string,",
				"          age as integer,",
				"          country as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> BronzeDimPassenger",
				"source(output(",
				"          booking_id as integer,",
				"          passenger_id as integer,",
				"          flight_id as integer,",
				"          airline_id as integer,",
				"          origin_airport_id as integer,",
				"          destination_airport_id as integer,",
				"          booking_date as date,",
				"          ticket_cost as decimal(10,2),",
				"          flight_duration_mins as integer,",
				"          checkin_status as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> BronzeFactBooking",
				"source(output(",
				"          airport_id as short,",
				"          airport_name as string,",
				"          city as string,",
				"          country as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     documentForm: 'documentPerLine') ~> BronzeDimAirport",
				"BronzeDimAirline derive(country = upper(country)) ~> derivedColumnCountry",
				"BronzeDimFlight select(mapColumn(",
				"          flight_id,",
				"          flight_number,",
				"          departure_timestamp = departure_time,",
				"          arrival_timestamp = arrival_time",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectCols",
				"BronzeDimPassenger select(mapColumn(",
				"          passenger_id,",
				"          full_name,",
				"          gender_flag = gender,",
				"          age,",
				"          country",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectColstoRename",
				"selectColstoRename derive(gender_flag = regexReplace(gender_flag, \"M\", \"Male\")) ~> derivedGenderFlag",
				"derivedGenderFlag derive(gender_flag = regexReplace(gender_flag, \"F\", \"Female\")) ~> derivedGenderFlagFemale",
				"derivedGenderFlagFemale filter(age > 25) ~> filterAge",
				"filterAge derive(first_name = split(full_name, \" \")[1]) ~> derivedName",
				"BronzeFactBooking cast(output(",
				"          ticket_cost as integer '000'",
				"     ),",
				"     errors: true) ~> castTicketCost",
				"BronzeDimAirport derive(airport_name = lower(airport_name)) ~> derivedAirportName",
				"derivedColumnCountry alterRow(upsertIf(1==1)) ~> UpsertAirline",
				"selectCols alterRow(upsertIf(1==1)) ~> UpsertFlight",
				"derivedName alterRow(upsertIf(1==1)) ~> UpsertPassenger",
				"castTicketCost alterRow(upsertIf(1==1)) ~> UpsertBooking",
				"derivedAirportName alterRow(upsertIf(1==1)) ~> UpsertAirport",
				"UpsertAirline sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'DimAirline',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['airline_id'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SilverDimAirline",
				"UpsertFlight sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'DimFlight',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['flight_id'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SilverDimFlight",
				"UpsertPassenger sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'DimPassenger',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['passenger_id'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SilverDimPassenger",
				"UpsertBooking sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'FactBooking',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['booking_id'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SilverFactBooking",
				"UpsertAirport sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'silver',",
				"     folderPath: 'DimAirport',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable: false,",
				"     insertable: false,",
				"     updateable: false,",
				"     upsertable: true,",
				"     keys:['airport_id'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SilverDimAirport"
			]
		}
	}
}